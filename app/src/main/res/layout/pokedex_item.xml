<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:id="@+id/pokedex_item_layout">

    <ImageView
        android:id="@+id/imageview_main_pokedex_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/null_sprite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_main_pokedex_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/number"
        app:layout_constraintEnd_toEndOf="@+id/imageview_main_pokedex_image"
        app:layout_constraintStart_toStartOf="@+id/imageview_main_pokedex_image"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

    <TextView
        android:id="@+id/textview_main_pokedex_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintEnd_toEndOf="@+id/imageview_main_pokedex_image"
        app:layout_constraintStart_toStartOf="@+id/imageview_main_pokedex_image"
        app:layout_constraintTop_toBottomOf="@+id/textview_main_pokedex_number" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>